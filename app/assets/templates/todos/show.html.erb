<div class="task_list panel" ng-class="getPanelClass(task_list.tasks.status)">
  <div class="panel-heading">
    <div class="metadata pull-right">
      {{task_list.tasks.finished_tasks_count}} / {{task_list.tasks.total_tasks_count}}
    </div>
    <h5 class="panel-title">{{task_list.title}}</h5>
  </div>
  <div class="panel-body">
    <div class="container">
      {{task_list.description}}
      <i ng-if="!task_list.description">No description</i>
    </div>
    <div class="tasks_container">
      <todo ng-repeat="task in tasks" task="task" />

      <button type="button" class="btn btn-success col-md-6 col-md-offset-3" data-toggle="modal" data-target="#myModal" ng-click="resetTaskForm()">Add task</button>
      <div class="modal fade" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Create task</h4>
            </div>
            <div class="modal-body">
              <form>
                <div ng-show="error">{{error}}</div>
                <input type="hidden" value="task.id" />
                <input type="text" placeholder="Title" ng-model="task.title" required="true" />
                <select ng-model="task.user_id" ng-options="o.id as o.display_name for o in users"></select>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary" ng-click="saveTask()">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
