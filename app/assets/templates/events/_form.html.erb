<input type="hidden" ng-model="event.id" />

<div class="form-group {{customClass}}">
  <label for="title" class="col-lg-2 control-label">
    Title <abbr title="required">*</abbr>
  </label>
  <div class="col-lg-10">
    <input placeholder="Title of your task list" type="text" ng-model="event.title" class="form-control" id="title"/>
  </div>
</div>

<div class="form-group">
  <label for="description" class="col-lg-2 control-label">
    Description
  </label>
  <div class="col-lg-10">
    <textarea placeholder="Optionnal description" class="form-control" rows="6" ng-model="event.description" id="description"></textarea>
  </div>
</div>

<div class="form-group">
  <label for="start-date" class="col-lg-2 control-label">
    Start Date
  </label>
  <div class="col-lg-10">
    <input placeholder="date" class="form-control" ng-model="event.start_date" id="start-date"></textarea>
  </div>
</div>

<div class="form-group">
  <label for="end-date" class="col-lg-2 control-label">
    End Date
  </label>
  <div class="col-lg-10">
    <input placeholder="date" class="form-control" ng-model="event.end_date" id="end-date"></textarea>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
    <a href="/events" class="btn btn-danger">Cancel</a>
    <button type="submit" class="btn btn-warning">Save</button> 
  </div>
</div>
